<body>
<a href="/">BackHome</a>
    <h1>Danh sách user</h1>
<p>Hiển thị</p>
<h2 style="background: aqua;font-size: large"><%=name%></h2>
<%for(var i = 0;i<data.length;i++){%>

<div><%= data[i].name %></div>
<div><%= data[i].age %></div>
<div><%= data[i].address %></div>
    <a href="/deleteUser?id=<%=data[i].id%>">Delete</a>
    <a href="/updateUser?id=<%=data[i].id%>">Update</a>
    <br>
<%}%>
<!--    form cho phép nhập giá trị và gửi vào request ten: createUser-->
<form action="/createUser" method="POST" enctype="application/x-www-form-urlencoded">
    <div style="display:flex; flex-direction: column;flex:auto;gap: 10px">
    <input type="text" name="name" placeholder="name">
        <input type="text" name="address" placeholder="address">
    <input type="text" name="age" placeholder="age">
    <button type="submit">Add User</button>
    </div>
</form>
</body>
</html>